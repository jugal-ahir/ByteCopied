{
  "name": "bytecopied",
  "version": "1.0.0",
  "description": "Full-stack code snippet management and attendance system",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && nodemon index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "set-admin": "node server/utils/setAdminRole.js",
    "check-users": "node server/utils/checkUsers.js",
    "delete-user": "node server/utils/deleteUser.js"
  },
  "keywords": [
    "mern",
    "firebase",
    "code-snippets",
    "attendance"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "mongodb": "^7.0.0"
  }
}
